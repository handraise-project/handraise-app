<h2><%= @issue.title %></h2>
<p><%= auto_link(simple_format(@issue.description)) %></p>
<ul class="pull-right inline-list">
  <% if current_user.id == @issue.user_id %>
  <li><a class="btn btn-default btn-xs" href="<%= edit_issue_path(@issue) %>" role="button", class:"btn btn-default"><span class="glyphicon glyphicon-edit"></span> Edit</a></li>
<% end %>
<% if current_user.admin %>
  <% if @issue.instructor_id %>
    <li><a class="btn btn-default btn-xs" href="<%= remove_from_queue_path(@issue) %>" role="button", class:"btn btn-default">Remove from my queue <span class="glyphicon glyphicon-minus-sign"></span></a></li>
  <% else %>
    <li><a class="btn btn-default btn-xs" href="<%= add_to_queue_path(@issue) %>" role="button", class:"btn btn-default">Add to my queue <span class="glyphicon glyphicon-plus-sign"></span></a></li>
  <% end %>
<% end %>
<% if can_see_resolve_button?(@issue) %>
<li><a class="btn btn-default btn-xs" href="<%= resolve_path(@issue) %>" role="button", class:"btn btn-default">Archive <%= image_tag("archive_noun_project_svg_14744.svg", :alt => "Archive icon", :size => "12x12", style:"margin-top:-3px;") %> </a>
</li>
<% end %>
</ul>

<ul class="inline-list meta-info">
  <li><%= issue_poster_name(@issue) %></li>
  <li><%= time_ago_in_words(@issue.created_at, :seconds => true ) %> ago</li>
  </ul>

<div class="issue-replies">
<h3>Replies</h3> 
<% if @issue.responses.any? %>
  <ul class="no-bullets">
    <% @issue.responses.each do |response| %>
      <li>
      <p><%= image_tag(current_user.image_gravatar, :alt => "Gravatar", class:"gravatar") %> <%= display_name(response.user)%>, <%= time_ago_in_words(response.created_at, :seconds => true ) %> ago:</p>
      <blockquote>
        <%= auto_link(simple_format(response.description)) %>
      </blockquote>
      </li>
    <% end %>
  </ul>
<% end %>
<%= render "responses/new" %>
</div>


