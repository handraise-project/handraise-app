<h2><%= @issue.title.titleize %></h2>
<h3><%= @issue.description %></h3>

<h2>Posted by <%= issue_poster_name(@issue) %></h2>

<% if !@issue.resolved? && (current_user.id == @issue.user_id || current_user.permissions > 0) %>
<%= link_to "Mark this issue as resolved", resolve_path(@issue) %><br>
<% end %>

<% if @issue.responses.any? %>
  Responses:
  <ul>

    <% @issue.responses.each do |response| %>
      <li><%= response.description %></li>
  <% end %>

  </ul>
<% end %>

<%= link_to "Respond to this issue", new_issue_response_path(@issue) %> | <%= link_to "Edit this issue", edit_issue_path(@issue) %>

  