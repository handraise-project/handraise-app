<div class="form-header">
  <h1>New issue</h1>
</div>

<%= form_for @issue, :html => {:role => "form"}  do |f| %>
  <div class="form-group">
  <%= f.text_field :title, placeholder:"Title", class:"form-control issue-title", :autofocus => true %>
  <p class="errors"><%= @issue.errors.messages[:title][0] %></p>
  </div>
  <div class="form-group">
  <%= f.text_area :description, placeholder:"Description (optional)", class:"form-control", rows:"4" %>
 <p class="help-text">Some HTML tags allowed.  Insert code snippets using <span class="code-sample">&#60;code&#62;a code snippet&#60;/code&#62;</span>.</p>
  </div>
  <div class="radio"> 
  <%= f.radio_button :anonymous, :false, :checked => true %>
  <%= f.label :anonymous, "Post anonymously", :value => 'false' %>
  </div>
   <div class="radio">
  <%= f.radio_button :anonymous, :true %>   
  <%= f.label :anonymous, "Display my name", :value => 'true' %>
   </div>
  <%= f.submit class:"btn btn-primary issue-submit" %>
<% end %>
  