<% if @issue.responses.any? %>
<ul class="no-bullets">
  <% @issue.responses.each do |response| %>
  <li>
    <p><%= display_gravatar(response.user) %> <%= display_name(response.user)%>, <%= time_ago_in_words(response.created_at, :seconds => true ) %> ago:</p>
    <blockquote>
      <%= auto_link(simple_format(response.description)) %>
    </blockquote>
  </li>
  <% end %>
</ul>
<% end %>