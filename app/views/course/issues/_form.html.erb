<%= form_for [@course, @issue] do |f| %>
  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <p class="errors"><%= @issue.errors.messages[:title][0] %></p>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <p>
  <%= f.label :anonymous, "Show my name " %>
  <%= f.radio_button :anonymous, :false, :checked => true %>
  <%= f.label :anonymous, "Post anonymously" %>
  <%= f.radio_button :anonymous, :true %>
  </p>

  <%= f.submit %>
<% end %>