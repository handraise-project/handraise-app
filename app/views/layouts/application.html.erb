<!DOCTYPE html>
<html>
<head>
<% #TODO: extract into method %>
  <title><%= @course ? "#{@course.name} Issue Queue" : "Handraise" %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <%= favicon_link_tag '/favicon.ico' %>
</head>
<body>
 <!-- Fixed navbar -->
 <div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <!--   <span class="sr-only">Toggle navigation</span> -->
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to root_path, :class => 'navbar-brand' do %>
        <%= render 'layouts/navbar' %>
      <% end %>

    </div><!--/.navbar-header -->
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag(current_user.image_gravatar, :alt => "Gravatar", class:"gravatar") %> <%= display_name(current_user) %> <b class="caret"></b></a>
        <ul class="dropdown-menu user-menu">
          <li><%= link_to "Sign Out", signout_path %></li>
        </ul>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 padding-on-top">

    </div>
  </div>
  <div class="main-content">
    <% if flash[:notice] %>
      <div class="row">
        <div class="col-sm-12">
          <p class="alert alert-success"><%= flash[:notice] %></p>
        </div>
      </div>   
    <% end %>
    <%= yield %>
  </div>
</div> <!-- /container -->
</body>
</html>
