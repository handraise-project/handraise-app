<li>
<%= link_to course_issue_path @course, issue do %>
<button>
  <span class="issue-title"><%= issue.title.capitalize %></span>
    <ul class="meta-info">
      <%= issue_name_and_time_ago(issue) %>
      <%= added_to_instructor_queue(issue) %>
      <% if issue.responses.count > 0 %>
        <%= render 'issue_responses_reply_count', :count => issue.responses.count %>
      <% end %>
      <%= render 'enqueue_button', :issue => issue if @current_user.admin? %>
    </ul>
</button>
<% end %>
</li>